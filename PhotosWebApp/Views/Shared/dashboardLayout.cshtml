<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PhotosWebApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/dashboard.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
    <!-- <link rel="stylesheet" href="~/PhotosWebApp.styles.css" asp-append-version="true" /> -->
</head>
<body>
  
<!-- Navbar -->
    
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3" style="background-color:#a5e887;">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">
                    <img src="~/images/leaf.png" width="30" height="30" alt="">
                </a>
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><b>Leafboard</b></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Dashboard" asp-action="Index">Dashboard</a>
                        </li>
                        
                        <li class="nav-item">
                           &nbsp; <a class="btn btn-outline-success" asp-area="" asp-controller="Dashboard" asp-action="AddImage">Add Image</a>
                        </li>
                        
                    </ul>

                  

                    <a class="text-dark" asp-controller="Dashboard" asp-action="GetuserDetails" style="text-decoration: none">
                    <form class="form-inline my-2 my-lg-0" asp-controller="Dashboard" asp-action="GetuserDetails">
                        
                           @ViewData["username"] &nbsp;
                            @if (ViewData["profileImage"] == null)
                            {
                                <img class="img-thumbnail rounded-circle" style="width: 50px; height: 50px;" src="~/images/LoginRegsiterPage/avatar.svg">
                            }
                            else{
                            <img class="img-thumbnail rounded-circle" style="width: 50px; height: 50px;" src="@ViewData["profileImage"]">
                            }
                       </form>
                       </a>
                    <form class="d-flex">
                        &nbsp;&nbsp;
                        <a class="btn btn-success" asp-area="" asp-controller="User" asp-action="Login">Logout</a>
                    </form>

                </div>
            </div>
        </nav>
    </header>
   
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/dashboard.js" asp-append-version="true"></script>

    <script>
        // Example starter JavaScript for disabling form submissions if there are invalid fields
        const inputs = document.querySelectorAll(".input");
        function preview() {
            frame.src = URL.createObjectURL(event.target.files[0]);
        }

        function addcl() {
            let parent = this.parentNode.parentNode;
            parent.classList.add("focus");
        }

        function remcl() {
            let parent = this.parentNode.parentNode;
            if (this.value == "") {
                parent.classList.remove("focus");
            }
        }
        //start function

        //end of function
        inputs.forEach(input => {
            input.addEventListener("focus", addcl);
            input.addEventListener("blur", remcl);
        });
    </script>


    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
