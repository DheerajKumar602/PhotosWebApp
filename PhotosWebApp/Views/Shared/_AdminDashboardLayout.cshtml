<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] Admin Dashboard</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3" style="background-color:#a5e887;">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">
                    <img src="~/images/leaf.png" width="30" height="30" alt="">
                </a>
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><b>Leafboard</b></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">

                        <li class="nav-item">
                            <a asp-controller="Admin" asp-action="Dashboard" class="nav-link text-dark">Welcome Admin</a>
                        </li>

                    </ul>
                   
                        <form class="form-inline my-2 my-lg-0">

                            @ViewData["username"] &nbsp;
                            @if (ViewData["profileImage"] == null)
                            {
                                <img class="img-thumbnail rounded-circle" style="width: 50px; height: 50px;" src="~/images/LoginRegsiterPage/avatar.svg">
                            }
                            else
                            {
                                <img class="img-thumbnail rounded-circle" style="width: 50px; height: 50px;" src="@ViewData["profileImage"]">
                            }
                        </form>
                  
                    <form class="d-flex">
                        &nbsp;&nbsp;
                        <a a class="btn btn-success" asp-area="" asp-controller="User" asp-action="Login">Logout</a>
                    </form>
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - eTickets - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    
</body>
</html>