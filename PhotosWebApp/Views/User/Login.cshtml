@{
    Layout = "~/Views/Shared/_LoginRegisterLayout.cshtml";
}

<script>
    function validatePassword() {
        var password = document.getElementById("Password").value;
        //var paswd = /^(?=.*[0-9])(?=.*[!@@#$%^&*])[a-zA-Z0-9!@@#$%^&*]{7,15}$/;
        if (password.length < 6) {
            Password.setCustomValidity("Password must be atleast 6 characters long.");
            return true;
        }
        else {
            Password.setCustomValidity('');
            return false;
        }
    }

    function validateForm() {
        setEmail();
        validatePassword();
        
    }

    function setEmail() {
        localStorage.setItem("emailId", document.getElementById('Email').value);
        return true;
    }

</script>

<body>
    <div>
        <img class="wave" src="/images/LoginRegsiterPage/wave.png">
        <div class="container">
            <div class="img">
                <img src="/images/LoginRegsiterPage/bg.png">
            </div>
            <div class="login-content">
                <form id="LoginForm" name="LoginForm" enctype="multipart/form-data" method="post">
  
                    <img src="/images/LoginRegsiterPage/avatar.svg">

                    <h2 class="title">Leafboard</h2>

                    @if (TempData.ContainsKey("message"))
                    {
                        <h4>@TempData["message"]</h4>
                    }

                    <div class="input-div one">

                        <div class="i">
                            <i class="fas fa-user"></i>
                        </div>
                        <div class="div">

                            <input type="email" class="input" id="Email" name="Email" placeholder="Email ID" required>
                        </div>
                    </div>
                    <div class="input-div pass">
                        <div class="i">
                            <i class="fas fa-lock"></i>
                        </div>
                        <div class="div">

                            <input type="password" class="input" id="Password" name="Password" placeholder="Password" required>
                        </div>
                    </div>

                    <a asp-controller="User" asp-action="ForgotPassword">Forgot Password?</a>
                    <input type="submit" class="btn" value="Login" onclick="validateForm()">
                    <a asp-controller="User" asp-action="Register">New Here? Sign Up Now!!!</a>
                </form>
            </div>
        </div>
    </div>
</body>