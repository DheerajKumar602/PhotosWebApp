<link rel="stylesheet" href="~/css/LoginRegisterStyles.css" asp-append-version="true" />

<body>
    <div id="container">
        <form id="LoginForm" name="LoginForm" enctype="multipart/form-data" method="post">

            <div class="form-wrap">
                <h2>Set New Password</h2>
                <div class="form-group">
                    <h6 style="color : green">OTP has been sent to your registered email address.</h6>
                    <label for="Email">Email ID : </label>
                    <input type="text" id="Email" name="Email" value="@TempData["Email"]" readonly />
                </div>

                <div class="form-group">
                    <label for="Email">Enter OTP</label>
                    <input type="text" id="Otp" name="Otp" />
                </div>

                <div class="form-group">
                    <label for="Password">New Password</label>
                    <input type="text" id="NewPassword" name="NewPassword" />
                </div>


                <div class="form-group">
                    <label for="Password">Confirm Password</label>
                    <input type="text" id="ConfirmPassword" name="ConfirmPassword" />
                </div>

                <button type="submit">Reset Password</button>
        </form>
    </div>
</body>